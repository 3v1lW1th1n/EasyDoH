{
  "manifest_version": 2,
  "name": "EasyDoH",
  "version": "1.1.2",

  "description": "Easy DNS over HTTPS setting",
  "icons": {
    "48": "icons/easydoh-512.png"
  },

  "applications": {
    "gecko": {
      "id": "easydoh@elevenpaths.com",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/easydoh-512.png"
    },
    "default_title": "Easy DNS over HTTPS",
    "default_popup": "popup/index.html"
  },

  "permissions": ["nativeMessaging"]
}
